void function Execution_TonePrime_Fix( entity attacker, entity target )
{
	// we've removed global anim event handle "give_ammo"
	// all the fixes handled with this function!

	// if we're holding 40mm and we don't have enough ammo for performing execution( 3 rounds required )
	// set clip to 3 so we don't receive reloading during animation
	// note: this breaks vanilla behavior, which sets weapon ammo to FULL and fire 3 shots, resulting 9 rounds in clip after execution
	entity mainWeapon = attacker.GetMainWeapons()[0]
	//print( "mainWeapon: " + string( mainWeapon ) )
	if ( IsValid( mainWeapon ) )
	{
		if ( mainWeapon.GetWeaponClassName() == "mp_titanweapon_sticky_40mm" )
		{
			if ( mainWeapon.GetWeaponPrimaryClipCount() < 3 )
				mainWeapon.SetWeaponPrimaryClipCount( 3 )
		}
	}
}

