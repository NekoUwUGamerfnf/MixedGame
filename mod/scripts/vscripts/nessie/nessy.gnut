// seems no need to use dissolve while clearing, which adds too many particle on them
//void function ClearNessyCostume( entity ent, int specifiedType = eNessieType.NESSIE_ALL_TYPES, bool isDissolving = false, bool instant = false )
void function ClearNessyCostume( entity ent, int specifiedType = eNessieType.NESSIE_ALL_TYPES, float propFadeOutDelay = NESSIE_PROP_FADEOUT_DELAY, bool instant = false )
{
	if ( !( ent in file.entOwnedNessieCostumes ) )
		return
	
	array<entity> ownedProps
	// no type specified means we clear all costume
	if ( specifiedType == eNessieType.NESSIE_ALL_TYPES )
	{
		for ( int i = 0; i < eNessieType.NESSIE_ALL_TYPES; i++ )
		{
			if ( i in file.entOwnedNessieCostumes[ ent ] )
				ownedProps.append( file.entOwnedNessieCostumes[ ent ][ i ] )
		}
	}
	else
	{
		if ( specifiedType in file.entOwnedNessieCostumes[ ent ] )
			ownedProps.append( file.entOwnedNessieCostumes[ ent ][ specifiedType ] )
	}

	foreach ( prop in ownedProps )
	{
		if ( IsValid( prop ) )
		{
			//ClearNessyProp( prop, ent, isDissolving, instant )
			ClearNessyProp( prop, ent, propFadeOutDelay, instant )
		}
	}
}

// seems no need to use dissolve while clearing, which adds too many particle on them
//void function ClearNessyProp( entity prop, entity owner = null, bool isDissolving = false, bool instant = false )
void function ClearNessyProp( entity prop, entity owner = null, float propFadeOutDelay = NESSIE_PROP_FADEOUT_DELAY, bool instant = false )
{
	if ( instant )
	{
		prop.Destroy()
		return
	}

	// drop prop version
	if ( file.shouldDropPropOnClearNessy )
	{
		vector origin = prop.GetOrigin()
		vector angles = prop.GetAngles()
		vector dropVelocity = prop.GetUpVector() * RandomFloatRange( 50, 100 )
		if ( IsValid( owner ) && !owner.GetParent() && !owner.Anim_IsActive() )
			dropVelocity = owner.GetVelocity()
		prop.ClearParent()

		// attach to a physics
		entity physics = AttachPhysicsToNessieProp( prop, origin, angles )
		physics.SetVelocity( dropVelocity )
		SetDroppedPropsStats( prop ) // sets offset for all kinds of model. WIP

		// seems no need to use dissolve while clearing, which adds too many particle on them
		/*
		if ( isDissolving )
			thread DissolveNessieProp( prop ) // always dissolve immediately
		else
		{
			thread FadeOutNessieProp( prop, NESSIE_PROP_FADEOUT_DELAY )
			//thread FadeOutNessieProp( prop ) // due we don't have good attach point for these props, make them fadeout immediately
		}
		*/
		thread FadeOutNessieProp( prop, propFadeOutDelay )
	}
	else // normal remove
	{
		// seems no need to use dissolve while clearing, which adds too many particle on them
		/*
		if ( isDissolving )
			thread DissolveNessieProp( prop )
		else
			thread FadeOutNessieProp( prop )
		*/
		thread FadeOutNessieProp( prop )
	}

	// try to clear from owner owned array
	if ( IsValid( owner ) )
	{
		if ( owner in file.entOwnedNessieCostumes )
		{
			for ( int i = 0; i < eNessieType.NESSIE_ALL_TYPES; i++ )
			{
				if ( i in file.entOwnedNessieCostumes[ owner ] )
				{
					if ( prop == file.entOwnedNessieCostumes[ owner ][ i ] )
						file.entOwnedNessieCostumes[ owner ][ i ] = null
				}
			}
		}
	}
}

