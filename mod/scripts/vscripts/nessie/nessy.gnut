int function GetRemovableHeadBodyGroupId( entity ent )
{
	int bodyGroupId = ent.FindBodyGroup( "removableHead" )
	if ( bodyGroupId > -1 )
		return bodyGroupId
	bodyGroupId = ent.FindBodyGroup( "head" )
	if ( bodyGroupId > -1 )
		return bodyGroupId
	
	return 0
}

