void function TrackNessyCostumeOwner( entity ent )
{
	ent.EndSignal( "OnDestroy" ) // destroyed ent gets their children destroyed, no worries
	ent.EndSignal( "SpawnNessyCostume" )
	ent.EndSignal( "ClearAllNessyCostume" )

	table<string, bool> results
	results["recreateCostume"] <- false

	AddEntityCallback_OnKilled( ent, OnNessyCostumeOwnerKilled )

	OnThreadEnd
	(
		function(): ( ent, results )
		{
			if ( IsValid( ent ) )
			{
				ClearAllNessyCostume( ent, 0, results["recreateCostume"] )
				RemoveEntityCallback_OnKilled( ent, OnNessyCostumeOwnerKilled )
				if ( results["recreateCostume"] )
					SpawnNessyCostume( ent )
			}
		}
	)

	asset lastTickModel
	while ( true )
	{
		// when a player starts embarking, needs to clear their nessy costume
		if( ent.IsPlayer() && ent.p.isEmbarking )
			return

		lastTickModel = ent.GetModelName()
		WaitFrame( true ) // let's bypass script FPS limit, because PROTO_FadeModelAlphaOverTime() also does so?

		// we changed model for some reason...
		// needs to spawn new outfit for them!
		if ( lastTickModel != ent.GetModelName() )
		{
			results[ "recreateCostume" ] = true
			return
		}
	}
}

void function OnNessyCostumeOwnerKilled( entity ent, var damageInfo )
{
	bool isDissolving = ent.IsDissolving() || ent.IsPlayerDecoy()
	float propFadeOutDelay = isDissolving ? 0.0 : NESSIE_PROP_FADEOUT_DELAY

	int dpFlags = DamageInfo_GetCustomDamageType( damageInfo )
	bool isGib = ent.e.forceGibDeath || bool(dpFlags & DF_GIB)
	bool isRagdoll = ent.e.forceRagdollDeath || bool(dpFlags & DF_RAGDOLL)
	//print( "isGib: " + string( isGib ) )
	//print( "isRagdoll: " + string( isRagdoll ) )
	bool instant = !file.shouldDropPropOnClearNessy && ( isGib || isRagdoll )
	//print( "instant: " + string( instant ) )

	// seems no need to use dissolve while clearing, which adds too many particle on them
	//ClearNessyCostume( ent, eNessieType.NESSIE_ALL_TYPES, isDissolving, instant )
	ClearAllNessyCostume( ent, propFadeOutDelay, instant )
}

