const string BLEEDOUT_MODE_SHIELD_MESSAGE_ID = "11"
const string BLEEDOUT_MODE_HEALTH_MESSAGE_ID = "12"
const string BLEEDOUT_MODE_BATTERY_HINT_ID = "15"

