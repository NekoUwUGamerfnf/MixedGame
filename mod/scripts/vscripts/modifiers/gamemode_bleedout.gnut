	if ( attacker )
	{
		if( !attacker.IsPlayer() || ent == attacker ) // now only shows to attacker!
			return

		string attackerClassname = attacker.GetClassName()

		if ( attackerClassname == "trigger_hurt" || attackerClassname == "trigger_multiple" )
